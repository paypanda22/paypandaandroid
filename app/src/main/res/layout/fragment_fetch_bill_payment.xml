<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.bbps.FetchBillPayment">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/left_1_"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivBack"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:text="@string/fetch_bill_details"
            android:layout_toStartOf="@+id/info"
            style="@style/mostserrat_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/bharat_billpay_logo" />
    </RelativeLayout>

    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/top_bar"
        android:background="@color/bggrey_dark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hr"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvBillerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            style="@style/mostserrat_bold"
            android:textColor="@color/colorAccent" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lytAd1"
            style="@style/EditTextInput5">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lytAd2"
            style="@style/EditTextInput5"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lytAd3"
            style="@style/EditTextInput5"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lytAd4"
            style="@style/EditTextInput5"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAd4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lytAd5"
            style="@style/EditTextInput5"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAd5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>






    </LinearLayout>
    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="@string/pleaseNote"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/amount_ll"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/ic_bill_payment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_toRightOf="@+id/img1"
                    android:text="@string/allowus"
                    android:textSize="@dimen/_12ssp" />


            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlSubmit"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fetch Bill Details"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                style="@style/mostserrat_bold"
                android:textColor="@color/black"
                android:textAllCaps="true"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
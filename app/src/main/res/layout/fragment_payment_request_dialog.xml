<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_rounded_bottom_corner">

    <!-- Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Request By Member"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/mostserrat_bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Date and Amount Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Date :" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/grey_80"
                android:enabled="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Amount :" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/grey_80"
                android:enabled="false"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Remarks Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Remarks :" />

        <TextView
            android:id="@+id/remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter remark"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/grey_80"
            android:background="@drawable/edit_text_round_bg_outline" />
    </LinearLayout>

    <!-- TPin Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TPin :" />

        <EditText
            android:id="@+id/edtTPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter TPin"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="numberPassword"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/grey_80"
            android:background="@drawable/edit_text_round_bg_outline" />

        <TextView
            android:id="@+id/tvTPinError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/_10sdp"
            android:text="TPIN is required"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Select Status Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Select Status :" />

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_80"
            android:background="@drawable/spinner_background"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Authority remark :" />

        <EditText
            android:id="@+id/authority_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter remark"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/grey_80"
            android:background="@drawable/edit_text_round_bg_outline" />
    </LinearLayout>
    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:background="@drawable/edit_text_round_bg_outline_bold"
            android:backgroundTint="@color/blue_900"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:background="@drawable/edit_text_round_bg_outline_bold"
            android:backgroundTint="@color/green_900"
            android:textColor="@android:color/white"
           />
    </LinearLayout>

</LinearLayout>

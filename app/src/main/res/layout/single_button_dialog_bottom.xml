<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
  >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_85sdp"
        app:strokeColor="@color/colorPrimaryDark"
        app:strokeWidth="@dimen/_1sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_65sdp"
        android:layout_centerHorizontal="true">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/anim"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:background="#fff"
            android:layout_gravity="center"
            android:src="@drawable/accepted" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        app:cardCornerRadius="@dimen/_15sdp"
        app:strokeWidth="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:strokeColor="@color/colorPrimaryDark"
        android:layout_marginTop="-55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_75sdp"
            android:background="@drawable/bottom_back_curv_white"
            android:paddingHorizontal="@dimen/_10sdp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="dfsdfsdfsdfsfdsd"
                style="@style/mostserrat_extra_bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:text="fgdfgdfgdfg dfgdfgdfg dgd dfgdf dfgd dfgd dfgd dfgd fgd fgd fgdf dfgdfgdfg"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <View
                android:id="@+id/divider"
                style="@style/Divider.Horizontal"
                android:visibility="gone"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@+id/textView2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/divider"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_okay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:background="@drawable/submitt_btn_dialog_green"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="1dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/colorPrimaryDark"
    app:cardElevation="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <ImageView
            android:id="@+id/ivBankLogo"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/bank_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivBankLogo"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_name"
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvBankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10ssp"
                    android:textAllCaps="true"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ifsc_code_"
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvIfsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_number_"
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvBankCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/branch_name_"
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvBranchName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>
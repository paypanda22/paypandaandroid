<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".fragments.supportTicket.AddSupportTicket">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">
        <LinearLayout
            android:id="@+id/llMainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_subject"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:textSize="@dimen/_12ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput5"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/edtDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:hint="@string/select_department"
                    android:inputType="text"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput5"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/edtService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:hint="@string/select_related_service"
                    android:inputType="text"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput5"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/edtPriority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:hint="@string/select_ticket_priority"
                    android:inputType="text"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_message"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:lines="5" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/mostserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/upload_related_images"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlImage1"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@drawable/dotted_background"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/attachment1"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:foregroundGravity="center"
                        android:src="@drawable/add_squre"
                        app:tint="@color/bggrey_dark" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlImage2"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:background="@drawable/dotted_background"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/attachment2"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/add_squre"
                        app:tint="@color/bggrey_dark" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlImage3"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:background="@drawable/dotted_background"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/attachment3"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/add_squre"
                        app:tint="@color/bggrey_dark" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlImage4"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:background="@drawable/dotted_background"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/attachment4"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/add_squre"
                        app:tint="@color/bggrey_dark" />
                </RelativeLayout>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                style="@style/mostserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submitt_btn"
                android:text="@string/submit"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_gravity="center"
            android:src="@drawable/loading_anim" />
        <LinearLayout
            android:id="@+id/llNoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/no_data_folder"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unable to Get Dispute Master Data"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
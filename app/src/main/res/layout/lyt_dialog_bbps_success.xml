<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_100sdp"
        app:cardBackgroundColor="@color/bggrey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_5sdp"
            android:src="@drawable/accepted" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CA Number"
                style="@style/mostserrat_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvCaNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_00"
                style="@style/mostserrat_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/green"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">
            <TextView
                android:id="@+id/tvOpName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operator Name"
                style="@style/mostserrat_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvOpName"
                android:layout_toEndOf="@+id/tvOpName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="end"
                style="@style/mostserrat_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/green"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Txn ID "
                style="@style/mostserrat_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvTxnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/mostserrat_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/green"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operator ID"
                style="@style/mostserrat_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvOpID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/mostserrat_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/green"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnYes"
                style="@style/mostserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/submitt_btn"
                android:text="OK"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintButtonSize" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNo"
                style="@style/mostserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/submitt_btnsmall_dark"
                android:text="@string/no"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintButtonSize" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
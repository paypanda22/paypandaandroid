<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark_light">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:src="@drawable/left"
            app:tint="@color/white" />

        <TextView
            style="@style/mostserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="Add Payout Bank Account"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topPanel"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_20sdp">



            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput2"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:hint="@string/enter_account_holder_name"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput2"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/enter_mobile_number"
                    android:maxLength="10"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput2"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAccountNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Enter Account Number"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextInput2"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtcfmAccountNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAccessibility="no"
                    android:longClickable="false"
                    android:textIsSelectable="false"
                    android:hint="Enter Confirm Account Number"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytBankList"
                style="@style/EditTextInput2"
                app:endIconMode="dropdown_menu"
                ><AutoCompleteTextView
                android:id="@+id/edtBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:hint="@string/select_bank_name"
                android:focusable="false"
                android:inputType="textPersonName"
                android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytEdtIfsc"
                style="@style/EditTextInput2"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtIfsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Enter Ifsc Code"
                    android:maxLines="1"
                    android:textAllCaps="true" />
            </com.google.android.material.textfield.TextInputLayout>


                <!-- Label for Bank Proof -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Proof: "
                    style="@style/mostserrat_bold"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="16sp"
                 android:textColor="@color/bggrey_dark" />



            <!-- Layout for the Choose File button and the selected file name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <!-- Button to open file chooser -->
                <Button
                    android:id="@+id/btnChooseFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose File" />

                <!-- Display selected file name -->
                <TextView
                    android:id="@+id/txtFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingStart="16dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvValidateBeneficiaryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/validate_beneficiary"
                android:background="@drawable/submitt_btn_water_blue"
                android:paddingVertical="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:textColor="@color/white"
                style="@style/mostserrat_bold"
                android:layout_gravity="end"/>
            <TextView
                android:id="@+id/tvPromtCharges"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_will_be_charged_3_for_beneficiary_validation"
                android:layout_gravity="end"
                android:textColor="@color/red"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <!-- First Note -->

                <!-- Second Note -->
                <TextView
                    style="@style/mostserrat_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Note: Account Verification Charges Rupees Will Be Debited."
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note: You can add maximum 5 bank accounts!."
                    android:textColor="@color/colorPrimaryDark"
                    style="@style/mostserrat_bold"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddBeneficiary"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/submitt_btn_dialog"
                android:text="Add Beneficiary"
                style="@style/mostserrat_bold"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</RelativeLayout>
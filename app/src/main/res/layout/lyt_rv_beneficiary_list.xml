<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <ImageView
            android:id="@+id/ivBankLogo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/bank_color"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivBankLogo"
            android:layout_toStartOf="@+id/ivDelete"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tvRecipientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_10ssp"
                style="@style/mostserrat_bold"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:maxLines="1"
                android:maxLength="35"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_10ssp"
                android:textAllCaps="true"
                android:maxLines="1"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_10ssp"
                android:textAllCaps="true"
                android:maxLines="1"
                android:maxLength="35"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified"
                android:visibility="gone"
                style="@style/mostserrat_bold"
                android:drawableEnd="@drawable/ic_baseline_check_circle_24"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textAllCaps="true"
                android:maxLines="1"
                android:maxLength="35"
                android:textColor="@color/green_900"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/recycle_bin"/>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>
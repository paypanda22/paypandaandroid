<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    android:background="@color/grey_5">

    <TextView
        android:id="@+id/tvTitle"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/btn_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/blue_900"
        style="@style/mostserrat_extra_bold"
        android:text="Transfer Money" />
    <TextView
        android:id="@+id/NAme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mobile"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/refer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:text="Refer ID - RT10525184"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvAmount"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_37sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:elevation="@dimen/_3sdp"
        app:strokeColor="@color/grey_10"
        app:strokeWidth="@dimen/_1sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_3sdp"
            android:paddingVertical="@dimen/_8sdp">

            <ImageView
                android:id="@+id/rupeeicon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:src="@drawable/ic_rupee" />

            <EditText
                android:id="@+id/fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/rupeeicon"
                android:background="@null"
                android:hint="Enter Amount"
                android:inputType="number"
                android:maxLength="12"
                android:textSize="@dimen/_15ssp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
<!--    <com.google.android.material.textfield.TextInputLayout-->
<!--        style="@style/EditTextInput2">-->
<!--        <com.google.android.material.textfield.TextInputEditText-->

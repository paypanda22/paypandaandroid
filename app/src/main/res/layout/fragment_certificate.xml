<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:src="@drawable/left"
            app:tint="@color/white" />

        <TextView
            style="@style/mostserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="Certificate"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>


<LinearLayout

    android:layout_below="@+id/topPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/certificateD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/certificate_background"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Certificate Header with Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/horizontal_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CERTIFICATE OF AUTHORIZATION"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/certificate_text_primary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Retailer Code -->
            <TextView
                android:id="@+id/refer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RT10352825"
                style="@style/mostserrat_bold"
                android:textSize="16sp"
                android:textColor="@color/certificate_accent"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal" />

            <!-- Certification Statement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is to certify that"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/certificate_text_primary"
                android:layout_gravity="center_horizontal" />

            <!-- Retailer Name -->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIDDHARTH BEHERA"
                style="@style/mostserrat_bold"
                android:textSize="18sp"
                android:textColor="@color/certificate_accent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <!-- Certification Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is appointed as the customer service point of Pay Panda Payment Solution Private Limited."
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/certificate_text_primary"
                android:layout_gravity="center_horizontal" />

            <!-- Address -->
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/certificate_text_primary"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />

            <!-- Date Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"

                android:padding="10dp"
                android:background="@color/certificate_date_background"
                android:gravity="center">

                <!-- Onboarding Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/OnboardingD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/green_700"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Onboarding Date"
                        android:textSize="10sp"
                        android:textColor="@color/certificate_text_primary"
                        />
                </LinearLayout>

                <!-- Print Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/printDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/green_700"
                        android:gravity="end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Print Date"
                        android:textSize="11sp"
                        android:textColor="@color/certificate_text_primary"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Valid Till Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Validtill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/green_700"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid Till"
                        android:textSize="11sp"
                        android:textColor="@color/certificate_text_primary"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Signature Section -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingRight="24dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sign"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/npci_logo"
                        android:layout_gravity="center_horizontal" />


                    <TextView
                        android:id="@+id/signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signature"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:gravity="right|bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Powered by"
                        android:textSize="14sp"
                        android:textColor="@color/articleToolbarSubTextColor"
                        android:layout_gravity="right|bottom"
                        android:gravity="right" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:src="@drawable/horizontal_logo"
                        android:layout_gravity="right" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <Button
        android:id="@+id/tvDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_gravity="center"
        style="@style/mostserrat_bold"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/articleBGColor"
        android:backgroundTint="@color/blue_A200"
        android:text="download Certificate"/>

</LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    app:strokeColor="@color/colorPrimaryDark"
    app:strokeWidth="@dimen/_1sdp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:src="@drawable/horizontal_logo"
            android:layout_margin="@dimen/_5sdp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:background="@color/bggrey">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/_55sdp"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_55sdp"
                android:src="@drawable/ic_cart_flat_shop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/ivIcon"
                android:layout_marginStart="@dimen/_5sdp">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/package_third_a"
                    android:textSize="@dimen/_12ssp"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:id="@+id/rvServices"/>
                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/package_third_a"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/_10ssp"
                    android:maxLength="80"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tvMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="...more"
                    android:textColor="@color/colorAccent"
                    style="@style/mostserrat_bold"
                    android:visibility="gone"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/_10ssp"
                    android:maxLength="80"
                    android:gravity="end"/>
                <TextView
                    android:id="@+id/tvLess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="...less"
                    android:textColor="@color/colorAccent"
                    style="@style/mostserrat_bold"
                    android:visibility="gone"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/_10ssp"
                    android:maxLength="80"
                    android:gravity="end"/>
                <TextView
                    android:id="@+id/tvBuyNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_now"
                    style="@style/mostserrat_bold"
                    android:textColor="@color/white"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/btn_success"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:textSize="@dimen/_10ssp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginVertical="@dimen/_5sdp"
                    app:drawableStartCompat="@drawable/ic_shopping_cart" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.home.ProfileEditFragment">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:src="@drawable/left"
            app:tint="@color/white" />

        <TextView
            style="@style/mostserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/profile_settings"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
          android:background="@color/white"
        android:padding="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450dp">
                <LinearLayout
                    android:background="@drawable/gradientbackground"
                    android:layout_width="match_parent"
                    android:layout_height="410dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/rlImageUpload"
                        android:layout_width="70dp"
                        android:layout_gravity="center"
                        android:layout_height="70dp"
                        android:layout_marginTop="@dimen/_20sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivUserProfileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/spacing_medium"
                            android:src="@drawable/user_1_"
                            app:civ_border_width="0dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"

                            app:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:id="@+id/ivEditImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="25dp"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/ic_edit"

                                    android:contentDescription="@string/shop_image" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/Name"
                         android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        style="@style/mostserrat_bold"
                        android:layout_height="wrap_content"
                        android:text="Jyoti Vishwakarma"
                        android:textColor="#FBFBFB"
                        android:textStyle="bold"
                        android:textSize="21sp"/>
                   <!-- <TextView
                        android:id="@+id/referCode"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        style="@style/mostserrat_bold"
                        android:layout_height="wrap_content"
                        android:text="RT0582346"
                        android:textColor="#070114"
                        android:textStyle="bold"
                        android:textSize="21sp"/>-->

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="400dp"
                    android:layout_height="466dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="155dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:padding="@dimen/_15sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_referal_base"/>
                            <TextView
                                android:id="@+id/referCode"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                style="@style/mostserrat_bold"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="RT0582346"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/total"/>
                            <TextView
                                android:id="@+id/LockedAmount"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                style="@style/mostserrat_bold"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="100"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/busines_address"/>
                            <TextView
                                android:id="@+id/PresentAddress"
                                android:textStyle="bold"
                                style="@style/mostserrat_bold"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="Address"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/map_1_"/>
                            <TextView
                                android:id="@+id/State"
                                android:textStyle="bold"
                                style="@style/mostserrat_bold"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="State"/>
                            <TextView
                                android:id="@+id/PinCode"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                style="@style/mostserrat_bold"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="State"/>
                        </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:paddingLeft="15dp"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_email_2"/>
                                <TextView
                                    android:id="@+id/Email"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    style="@style/mostserrat_bold"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:text="Wiliam@gmail.com"/>
                            </LinearLayout>

                            <LinearLayout

                                android:orientation="horizontal"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:padding="@dimen/_2sdp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_phone_base"/>
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_11sdp"
                                    android:id="@+id/Mobile_Number"
                                    android:textColor="@color/black"
                                    style="@style/mostserrat_bold"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:text="+266 225 225"/>
                            </LinearLayout>

                        </LinearLayout>




                </androidx.cardview.widget.CardView>
            </RelativeLayout>



           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/mostserrat_bold"
                android:textColor="@color/dark_red"/>-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardBackgroundColor="@color/green_50"> <!-- Lighter color for the card background -->

                <RelativeLayout
                    android:id="@+id/rlChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lock_astrisk"
                        app:tint="@color/black" />

                    <TextView
                        style="@style/mostserrat_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/change_login_password"
                        android:textColor="@color/colorPrimaryDark_light"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron"
                        app:tint="@color/colorPrimaryDark_light" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardBackgroundColor="@color/green_50"> <!-- Lighter color for the card background -->

                <RelativeLayout
                    android:id="@+id/rlChangePin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_otp"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Transaction Pin"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_12ssp"
                        style="@style/mostserrat_bold"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorPrimaryDark_light"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron"
                        app:tint="@color/colorPrimaryDark_light" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardBackgroundColor="@color/blue_50"> <!-- Different background color for this card -->

                <RelativeLayout
                    android:id="@+id/rlForgetPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_otp"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forget_transaction_pin"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_12ssp"
                        style="@style/mostserrat_bold"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorPrimaryDark_light"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron"
                        app:tint="@color/colorPrimaryDark_light" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardBackgroundColor="@color/blue_50"> <!-- Background color for the card -->

                <RelativeLayout
                    android:id="@+id/Certificate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_bill_payment"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Certificate"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_12ssp"
                        style="@style/mostserrat_bold"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorPrimaryDark_light" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron"
                        app:tint="@color/colorPrimaryDark_light" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
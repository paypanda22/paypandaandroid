<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.dmt.CreateCustomerFragment">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark_light">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:src="@drawable/left"
            app:tint="@color/white" />

        <TextView
            style="@style/mostserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/create_customer"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:contentDescription="@string/back"
            android:src="@drawable/menu"
            app:tint="@color/white" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topPanel"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@id/lytCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditTextInput2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/customer_name"
                        android:inputType="textPersonName"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/do_not_pass_any_random_name"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/red"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    tools:ignore="RtlSymmetry" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditTextInput2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtCustomerNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="number"
                        android:hint="@string/customer_mobile"
                        android:maxLength="10"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditTextInput2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtCustomerDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/date_of_birth"
                        android:clickable="true"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditTextInput2"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_3sdp"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCustomerPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="6"
                            android:hint="@string/pincode"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditTextInput2"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_3sdp"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCustomerArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/area"
                            android:inputType="text"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditTextInput2"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_3sdp"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_customer_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="@string/state"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditTextInput2"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_3sdp"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCustomerCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="@string/city"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lytEdtOtp"
                    android:visibility="gone"
                    style="@style/EditTextInput2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtOtpPs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_otp"
                        android:inputType="number"
                        android:maxLength="6"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCreateCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/submitt_btn_dialog"
                    android:text="@string/submit"
                    style="@style/mostserrat_bold"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lytOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/edit_text_round_bg_outline"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_below="@+id/lytCreate"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_customer"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    style="@style/mostserrat_bold"
                    android:textStyle="bold"
                    android:paddingStart="@dimen/_5sdp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_otp_received_on_customer_s_mobile"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/bggrey_dark"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:paddingStart="@dimen/_5sdp"
                    tools:ignore="RtlSymmetry" />

                <app.pay.pandapro.reusable.PinView
                    android:id="@+id/edtOtpLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:focusableInTouchMode="true"
                    android:inputType="numberPassword"
                    android:itemBackground="@drawable/box"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    app:itemCount="3"
                    app:itemSpacing="@dimen/_10sdp"
                    app:viewType="none"
                    tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:id="@+id/tv_resend_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resend_otp"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/green_700"
                    android:gravity="end"
                    style="@style/mostserrat_bold"
                    android:paddingStart="@dimen/_5sdp"
                    tools:ignore="RtlSymmetry" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/submitt_btn_small_green"
                    android:text="@string/verify"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    android:background="@color/white">




        <androidx.cardview.widget.CardView
            android:id="@+id/card_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            app:cardBackgroundColor="@color/green_bow"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">


        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/retailerLyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/blue_900"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/linear_common"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="wrap_content"
                            android:text="Transaction ID"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"
                            style="@style/mostserrat_extra_bold"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            style="@style/mostserrat_extra_bold"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/_110sdp"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            style="@style/mostserrat_extra_bold"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/_110sdp"
                            android:layout_height="wrap_content"
                            android:text="Data"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            style="@style/mostserrat_extra_bold"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </HorizontalScrollView>

    <TextView
        android:id="@+id/tvDownload"
        style="@style/mostserrat_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/btn_success"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:text="@string/download"
        android:textColor="@color/white"
        app:drawableEndCompat="@drawable/download"
        app:drawableTint="@color/white" />

</LinearLayout>




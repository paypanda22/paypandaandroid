<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/_10sdp"
    android:layout_height="match_parent"
    tools:context=".fragments.login.VerifyOtpFragment">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/left"
            tools:ignore="RtlSymmetry"
            android:importantForAccessibility="no" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivBack"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/otp_verification"
            style="@style/mostserrat_bold"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_below="@+id/topPanel">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_the_verification_code"
            android:textColor="@color/black"
            style="@style/mostserrat_bold"
            android:textSize="@dimen/_17ssp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_12ssp"
            android:gravity="center"/>
        <app.pay.panda.reusable.PinView
            android:id="@+id/edtOtpLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:focusableInTouchMode="true"
            android:inputType="number"
            style="@style/mostserrat_bold"
            android:itemBackground="@drawable/box"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            app:itemCount="6"
            app:itemSpacing="@dimen/_8sdp"
            app:viewType="none"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:id="@+id/tvResendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_otp"
                style="@style/mostserrat_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvTimer"
                android:layout_toEndOf="@+id/tvResendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:textStyle="bold"
                style="@style/mostserrat_bold"
                android:textColor="@color/red"
                android:text="@string/_00_56"
                android:textSize="@dimen/_15ssp"
                android:gravity="center"/>
        </RelativeLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/submitt_btn"
        android:drawableTint="@color/white"
        android:paddingHorizontal="@dimen/_20sdp"
        android:text="Submit"
        style="@style/mostserrat_bold"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintButtonSize"/>

</RelativeLayout>
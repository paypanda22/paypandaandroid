<!-- res/drawable/card_border_black.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer layer for the border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/_1sdp"
            android:color="@color/bggrey2" />
            <corners android:radius="@dimen/_18sdp" />
        </shape>
    </item>
    <!-- Inner layer for the CardView background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>
</layer-list>

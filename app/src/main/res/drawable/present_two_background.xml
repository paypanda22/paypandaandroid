<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Use a solid color for the background -->
            <solid android:color="@color/green_800"/> <!-- Replace with the color of your choice -->

            <!-- Define the border properties -->
            <stroke
                android:width="2dp"
                android:color="@color/green_800"/> <!-- Replace with the border color of your choice -->

            <!-- Define the radius for rounded corners -->
            <corners android:radius="8dp"/> <!-- Adjust the radius as needed -->
        </shape>
    </item>
</selector>
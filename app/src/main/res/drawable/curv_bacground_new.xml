<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EAEAEA"/> <!-- Change to your desired background color -->
        </shape>
    </item>

    <!-- Top Curved Shape -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="1000dp"
            android:height="400dp"/>
            <solid android:color="#EAEAEA"/>
        </shape>
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="100dp"/> <!-- Adjust to create spacing for the oval -->
    </item>
</layer-list>

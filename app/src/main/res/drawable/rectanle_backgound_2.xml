<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Corner radius for rounded corners -->
            <corners android:radius="@dimen/_15sdp" />

            <!-- Stroke outline -->
            <stroke
                android:width="1dp"
                android:color="@color/bggrey_dark" /> <!-- Change color as needed -->

            <!-- Background color -->
            <solid android:color="@color/white" /> <!-- Change color as needed -->

            <!-- Padding -->
            <padding
                android:left="@dimen/_10sdp"
                android:top="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:bottom="@dimen/_10sdp" />
        </shape>
    </item>
</selector>